{% extends 'base.html.twig' %}

{% block title %}Liste des Salariés{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-5 display-4">Liste des Salariés</h1>
        
        <div class="row">
            {% for Salarie in Salaries %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0">
                        <div class="card-body text-center">
                            <img src="{{ asset(Salarie.avatar) }}" alt="{{ Salarie.name }}" class="rounded-circle mb-3" width="100" height="100" style="object-fit: cover;">
                            <h5 class="card-title">{{ Salarie.name }}</h5>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
